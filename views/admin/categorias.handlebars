<h2>Noticias: </h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-sm btn-success mt-2">Nova Noticia</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Noticia: {{slug}}</small>
            <br>
            <small>Data da Noticia:{{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="btn btn-sm btn-success mt-4">Editar Noticia</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-sm btn-danger mt-2">Deletar noticia</button>

            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma noticia registrada no momento</h4>
{{/each}}